              <!-- task-6 -->
               <!-- Input field -->
<input type="text" id="text">

<!-- Paragraph to display input -->
<p id="keyup"></p>

<script>
  const input = document.getElementById("text");
  const output = document.getElementById("keyup");

  input.addEventListener("keyup", function () {
    output.innerText = input.value;
  });
</script>
        


