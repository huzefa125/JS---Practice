    <ul id="myList">
  <li>Apple</li>
  <li>Banana</li>
  <li>Mango</li>
</ul>

<script>
  const list = document.getElementById("myList");

  list.addEventListener("click", function(event) {
    if (event.target.tagName === "LI") {
      console.log(event.target.innerText);  // Logs the clicked itemâ€™s text
    }
  });
</script>


